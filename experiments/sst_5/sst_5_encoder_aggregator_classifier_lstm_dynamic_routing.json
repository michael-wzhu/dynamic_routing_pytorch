{
  "dataset_reader": {
    "type": "sst_5_data"
  },
  "train_data_path": "datasets/sst_5_phrases/train.jsonl",
  "validation_data_path": "datasets/sst_5_phrases/dev.jsonl",
  "test_data_path": "datasets/sst_5_phrases/test.jsonl",
  "evaluate_on_test": true,
  "model": {
    "type": "sst_5_encoder_aggregator_classifier",
    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "pretrained_file": "./resources/glove/glove.840B.300d.txt",
          "embedding_dim": 300,
          "trainable": false
        }
      }
    },
    "sentence_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 300,
      "hidden_size": 256,
      "num_layers": 1,
      "dropout": 0.3
    },
    "aggregator": {
      "type": "dynamic_routing_aggregator",
      "input_dim": 512,
      "out_caps_num": 5,
      "out_caps_dim": 256,
      "iter_num": 3,
      "output_format": "flatten",
      "activation_function": "tanh"
    },
    "classifier_feedforward": {
      "input_dim": 1280,
      "num_layers": 2,
      "hidden_dims": [300, 5],
      "activations": ["relu", "linear"],
      "dropout": [0.5, 0.0]
    },
    "dropout": 0.5,
    "regularizer": [
      [".", {"type": "l2", "alpha": 0.00001}]
    ]
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["sentence", "num_tokens"]],
    "padding_noise": 0.0,
    "batch_size": 32
  },

  "trainer": {
    "num_epochs": 20,
    "cuda_device": 0,
    "grad_clipping": 5.0,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adam",
      "lr": 5e-5
    }
  }
}
